<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".WiFiNetworksActivity">

    <LinearLayout
        android:id="@+id/m_toolbar"
        android:background="#000"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp">

        <TextView
            android:text="Air Control"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"/>

        <ImageView
            android:src="@drawable/ic_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/m_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/connection_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"/>

            <TextView
                android:text="Идёт подключение"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/choose_auto_network"
            android:layout_below="@id/connection_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Выберите сеть вашего автомобиля"/>

        <com.danilov.aircontrol.core.view.SafeRecyclerView
            android:id="@+id/scan_results"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/choose_auto_network"/>

    </RelativeLayout>



</RelativeLayout>

